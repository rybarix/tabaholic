{
  "name": "Tabaholic",
  "description": "Chrome extension that tracks your recently used tabs. Useful for managing 20+ tabs open at once.",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_icon": "extension-logo.png"
  },
  "icons": {
    "128": "extension-logo.png"
  },
  "permissions": ["tabs", "scripting", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "favicons/hot_1.png",
        "favicons/hot_2.png",
        "favicons/hot_3.png",
        "favicons/hot_4.png",
        "favicons/hot_5.png",
        "favicons/hot_6.png"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
